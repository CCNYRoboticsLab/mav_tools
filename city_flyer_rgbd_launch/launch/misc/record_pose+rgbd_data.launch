<launch>

  <arg name="bag_name"/>

  <node pkg="rosbag" type="record" name="record" output="screen"
    args="/camera/depth/camera_info 
          /camera/depth/image_raw 
          /camera/rgb/camera_info 
          /camera/rgb/image_raw
          /mav/imu/data
          /mav/cmd/pose
          -O $(env HOME)/ros/bags/$(arg bag_name)" />

</launch>
